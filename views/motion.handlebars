<div class="container-fluid">
  <h2>Motion Gallery</h2>
  <p>This is my motion.</p>
  <div class="row">
  {{#each fileNames.data}}
    <div class="col-md-4">
      <div class="thumbnail">
        <a href="/picture/motion/{{folder}}/{{name}}" target="_blank">
          <img src="/picture/motion/{{folder}}/{{name}}" alt="Lights" style="width:100%">
          <div class="caption">
            <p>{{formatTimeTwc name}}</p>
          </div>
        </a>
      </div>
    </div>
   {{/each}}
  </div>
</div>


{{#section 'jquery'}}
<script type="text/javascript">
 $(document).ready(function() {
	 
   $("#deleteAll").on( "click", function() {
	   $.get( "clearPicture", function( data ) {

           console.log(data);
           location.reload();
         });
     
    });
    $.each($('#navbarNav').find('li'), function() {
        $(this).toggleClass('active',
            '/' + $(this).find('a').attr('href') == window.location.pathname);
    });
    
  });
</script>
{{/section}}